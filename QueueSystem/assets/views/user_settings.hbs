{{> navbar_user }}

<div class="content form">
  <form method="post" action="/user/update">
    <input type="hidden" name="id" value="{{user.uuid}}"></input>

    <div class="form-group">
      <label for="name">Name</label>
      <input type="text" class="form-control" id="name" aria-describedby="nameHelp" placeholder="Name" name="name" value="{{user.name}}">
      <small id="nameHelp" class="form-text text-muted">The name you use</small>
    </div>
      
    <button type="submit" class="btn btn-primary">Submit</button>
    <a class="btn btn-primary" href="/user/delete?id={{user.uuid}}">Delete User</a>
  </form>
</div>