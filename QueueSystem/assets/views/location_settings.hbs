{{> navbar_dashboard }}

<div class="content form">
  <form method="post" action="/location/update">
    <input type="hidden" name="id" value="{{location.uuid}}"></input>

    <div class="form-group">
      <label for="name">Location Name</label>
      <input type="text" class="form-control" id="name" aria-describedby="nameHelp" placeholder="Name" name="name" value="{{location.name}}">
      <small id="nameHelp" class="form-text text-muted">The name of the location</small>
    </div>

    <div class="form-group">
      <label for="description">Location Description</label>
      <input type="text" class="form-control" id="description" aria-describedby="descriptionHelp" placeholder="Description" name="description" value="{{location.description}}">
      <small id="descriptionHelp" class="form-text text-muted">The description of the location</small>
    </div>

    <div class="form-group">
      <label for="capacity">Maximum Capacity</label>
      <input type="text" class="form-control" id="capacity" aria-describedby="nameHelp" placeholder="10" name="capacity" value="{{location.capacity}}">
      <small id="nameHelp" class="form-text text-muted">THe maximum capacity of the location (manual or generated by ContourMap)</small>
    </div>

    <div class="form-group">
      <label for="window">Queue Window (minutes)</label>
      <input type="text" class="form-control" id="window" aria-describedby="windowHelp" placeholder="10" name="window" value="{{location.window}}">
      <small id="windowHelp" class="form-text text-muted">The amount of time users have to enter the location before their position is discarded</small>
    </div>
      
    <button type="submit" class="btn btn-primary">Submit</button>
    <a class="btn btn-primary" href="/location/delete?id={{location.uuid}}">Delete Location</a>
  </form>
</div>